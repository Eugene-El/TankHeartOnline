<Window x:Class="TankHeartOnlineClient.GameLobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TankHeartOnlineClient"
        mc:Ignorable="d"
        Title="Game Lobby" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel 
                Margin="25px"
                Orientation="Horizontal"
                HorizontalAlignment="Center">
                <TextBox
                x:Name="ipTxt"
                Width="200"
                ToolTip="IP">
                </TextBox>
                <Button
                    x:Name="SetLocalBtn"
                    Content="Set local address"
                    Padding="20 0"
                    Margin="10 0"
                    Click="SetLocalBtn_Click">
                </Button>
            </StackPanel>
            <Button
                x:Name="GetLobbiesBtn"
                Content="Get lobbies"
                Width="100" Height="40"
                Click="GetLobbiesBtn_Click">
            </Button>
        </StackPanel>
    </Grid>
</Window>
